! ------------------------------------------------------------------------------
! Xft
! ------------------------------------------------------------------------------
Xft.dpi:        96
Xft.antialias:  true
Xft.autohint:   true
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.lcdfilter:  lcddefault
Xft.rgba:       rgb

! ------------------------------------------------------------------------------
! URxvt
! ------------------------------------------------------------------------------
URxvt*font:       xft: SauceCodePro NF:style=Regular:antialias=true:size=11:autohint=true
URxvt*boldFont:   xft: SauceCodePro NF:style=Bold:antialias=true:size=11:autohint=true
URxvt.scrollBar:  false
! Dracula Xresources palette
URxvt.foreground: #F8F8F2
URxvt.background: #282A36
URxvt.inheritPixmap: true
URxvt.shading:    75
URxvt*cursorUnderline: false
URxvt.color0:     #000000
URxvt.color8:     #4D4D4D
URxvt.color1:     #FF5555
URxvt.color9:     #FF6E67
URxvt.color2:     #50FA7B
URxvt.color10:    #5AF78E
URxvt.color3:     #F1FA8C
URxvt.color11:    #F4F99D
URxvt.color4:     #BD93F9
URxvt.color12:    #CAA9FA
URxvt.color5:     #FF79C6
URxvt.color13:    #FF92D0
URxvt.color6:     #8BE9FD
URxvt.color14:    #9AEDFE
URxvt.color7:     #BFBFBF
URxvt.color15: #E6E6E6

! ------------------------------------------------------------------------------
! ROFI
! ------------------------------------------------------------------------------
rofi.font:              SauceCodePro NF Regular 11
rofi.fullscreen:        true
rofi.lines:             6
rofi.line-margin:       10
rofi.terminal:          gnome-terminal
rofi.separator-style:   none
rofi.opacity:           90
rofi.tokenize:          false
rofi.padding:           300px
rofi.bw:                0
!rofi.run-shell-command: {terminal} -e sh -c 'tmux new-session "{cmd}"'

! ------------------------------------------------------------------------------
! ROFI Color theme
! -----------------------------------------------------------------------------
rofi.color-enabled: true
rofi.color-window:  #282a36, argb:0002b36, argb:0000000
rofi.color-active:  #282a36, #f1fa8c, #282a36, #282a36, #ff79c6
rofi.color-normal:  #282a36, #50fa7b, #282a36, #282a36, #ff79c6
rofi.color-urgent:  #282a36, #ff5555, #282a36, #282a36, #ff79c6

