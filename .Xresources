! ------------------------------------------------------------------------------
! Xft
! ------------------------------------------------------------------------------
Xft.dpi:        96
Xft.antialias:  true
Xft.autohint:   true
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.lcdfilter:  lcddefault
Xft.rgba:       rgb

! ------------------------------------------------------------------------------
! URxvt
! ------------------------------------------------------------------------------
URxvt.font:             xft:SauceCodePro NF:style=Regular
URxvt*boldFont:         xft:SauceCodePro NF:style=Bold
URxvt*cursorUnderline:  true
URxvt*transparent:      true
URxvt.depth:            32
URxvt.shading:          30
URxvt.background:       rgba:3333/3333/3333/e3e3
!URxvt.inheritPixmap:    true
URxvt.internalBorder:   15
URxvt.letterSpace:      -2
URxvt.scrollBar:        false
URxvt.scrollBar_right:  false
*.antialias:            true
*.autohint:             true
URxvt*cursorBlink:      true
URxvt.cursorColor:      #ff79c6
URxvt.cursorColor2:     #000000
*.foreground:           #F8F8F2
*.background:           #282A36
*.color0:               #000000
*.color8:               #4D4D4D
*.color1:               #FF5555
*.color9:               #FF6E67
*.color2:               #50FA7B
*.color10:              #5AF78E
*.color3:               #F1FA8C
*.color11:              #F4F99D
*.color4:               #BD93F9
*.color12:              #CAA9FA
*.color5:               #FF79C6
*.color13:              #FF92D0
*.color6:               #8BE9FD
*.color14:              #9AEDFE
*.color7:               #BFBFBF
*.color15:              #E6E6E6

! ------------------------------------------------------------------------------
! ROFI
! ------------------------------------------------------------------------------
rofi.font:              SauceCodePro NF Regular 11
rofi.fullscreen:        true
rofi.lines:             6
rofi.line-margin:       10
rofi.terminal:          gnome-terminal
rofi.separator-style:   none
rofi.opacity:           90
rofi.tokenize:          false
rofi.padding:           300px
rofi.bw:                0
!rofi.run-shell-command: {terminal} -e sh -c 'tmux new-session "{cmd}"'

! ------------------------------------------------------------------------------
! ROFI Color theme
! -----------------------------------------------------------------------------
rofi.color-enabled: true
rofi.color-window:  #282a36, argb:0002b36, argb:0000000
rofi.color-active:  #282a36, #f1fa8c, #282a36, #282a36, #ff79c6
rofi.color-normal:  #282a36, #50fa7b, #282a36, #282a36, #ff79c6
rofi.color-urgent:  #282a36, #ff5555, #282a36, #282a36, #ff79c6

